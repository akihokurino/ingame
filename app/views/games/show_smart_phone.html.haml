= content_for :head do
  = stylesheet_link_tag    "smart_phone/game"

= content_for :last do
  = javascript_include_tag "main/smart_phone/game"

= render partial: "application/smart_phone/default_header"

.game-page.mainCnt{"data-gameid" => @game[:id]}
  .gameBox
    .gameTopBox
      %h1.ttl
        = @game.title
      .gameWrap
        %figure.imgWrap
          - url = @game.amazon_url ? @game.amazon_url : ""
          %a{href: url, target: "blank"}
            - if @game.photo_path
              = image_tag "/game_photos/#{@game.photo_path}", height: "100%", class: "gameImg"
            - elsif @game.photo_url
              = image_tag @game.photo_url, height:"100%", class: "gameImg"
            - else
              = image_tag "/game_photos/default.png", height:"100%", class: "gameImg"
        .gameInfoWrap
          %ul.gameInfo
            %li.item.site
              .itemName ウェブサイト
              .itemContent
                - @game.game_urls.each do |url|
                  = link_to url.text, url.text, target: "blank"
            %li.item.hard
              .itemName ハード
              .itemContent
                = @game.device
            %li.item.maker
              .itemName メーカー
              .itemContent
                = @game.maker
            %li.item.category
              .itemName ジャンル
              .itemContent
                - @game.gametags.each do |gametag|
                  %span.gametag
                    = gametag.name
            %li.item.releaseDay
              .itemName 発売日
              .itemContent
                = @game.release_day
            %li.item.review
              .itemName 全体の評価
              .itemContent
                %span.reviewInner.icon-star
                  = @game.avg_rate
          %ul.linkBtnWrap
            %li
              %a.amazonBtn{href: "http://www.amazon.co.jp/s/ref=nb_sb_noss_1?__mk_ja_JP=カタカナ&url=search-alias%3Daps&field-keywords=#{@game.title}", target: "blank"} Amazonで検索
            %li
              %a.youtubeBtn{href: "https://www.youtube.com/results?search_query=#{@game.title}", target: "blank"} Youtubeで検索
          - if @game.wiki
            .gameSummary
              %label{for: "summary"} 概要
              %input.expand{type: "checkbox", id: "summary"}
              %p
                = @game.wiki
    = render partial: "select_btns", locals: {game: @game}

    - if @game.i_registed
      %span.delete-btn.deleteBtn マイゲームから削除

  .boxTtl
    %h2 このゲームに対するポスト#{@game.posts_count}件
  .sortBoxWrap
    %ul.sortBox.sort-box
      %li.item.current.follower-posts
        %a.follow{href: "/games/#{@game[:id]}#follower"} フォロー中
      %li.item.all-posts
        %a.all{href: "/games/#{@game[:id]}#all"} 全てのユーザー
      %li.item.liker-posts
        %a.star{href: "/games/#{@game[:id]}#liker"} いいね！順

  .game-timeline
    .post-list
    = image_tag "gif-load.gif", class: "loading-gif"

    = render partial: "application/smart_phone/comments_modal"


= render partial: "application/underscore/pc/common/delete_confirm"
= render partial: "application/underscore/smart_phone/common/post"
= render partial: "application/underscore/smart_phone/common/comment"
