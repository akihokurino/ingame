= content_for :head do
  = stylesheet_link_tag    "pc/game"

= content_for :last do
  = javascript_include_tag "main/pc/game"


= render partial: "application/pc/default_header"

%section.mainContent.game-page{"data-gameid" => @game[:id]}
  .gameBox
    .gameBoxInner
      %h1.gameTtl
        = @game.title
      %figure.gameImgWrap
        /
          - if !@game.amazon_url.nil?
            %a.gameInner{href: @game.amazon_url}
              = image_tag "/game_photos/#{@game.photo_path}", width: 195, class: "gameImg", alt: "ゲームパッケージ画像"
        = image_tag @game.photo_url, width: 195, class: "gameImg", alt: "ゲームパッケージ画像"
      .gameInfoBox
        %ul.gameInfoList
          %li.item
            メーカー：
            = @game.maker
          %li.item
            ジャンル：ほげほげ
          %li.item
            ハード：
            = @game.device
          %li.item
            リリース日：
            = @game.release_day
        %a.amazonBtn{href: ""} Amazonで見る
        .reviewBox
          %ul.starList
            - 4.times do |i|
              %li.starOn ★
            %li.starOff ☆
          %p.value
            = @game.avg_rate
        %ul.gameBtnList
          - if @game.i_registed
            %li.item
              %select.stars.my_rate{name: "stars", size: 1}
                - case @game.my_rate.to_i
                - when 1
                  %option{value: ""} レビュー
                  %option{value: 1, selected: "selected"} ★☆☆☆☆
                  %option{value: 2} ★★☆☆☆
                  %option{value: 3} ★★★☆☆
                  %option{value: 4} ★★★★☆
                  %option{value: 5} ★★★★★
                - when 2
                  %option{value: ""} レビュー
                  %option{value: 1} ★☆☆☆☆
                  %option{value: 2, selected: "selected"} ★★☆☆☆
                  %option{value: 3} ★★★☆☆
                  %option{value: 4} ★★★★☆
                  %option{value: 5} ★★★★★
                - when 3
                  %option{value: ""} レビュー
                  %option{value: 1} ★☆☆☆☆
                  %option{value: 2} ★★☆☆☆
                  %option{value: 3, selected: "selected"} ★★★☆☆
                  %option{value: 4} ★★★★☆
                  %option{value: 5} ★★★★★
                - when 4
                  %option{value: ""} レビュー
                  %option{value: 1} ★☆☆☆☆
                  %option{value: 2} ★★☆☆☆
                  %option{value: 3} ★★★☆☆
                  %option{value: 4, selected: "selected"} ★★★★☆
                  %option{value: 5} ★★★★★
                - when 5
                  %option{value: ""} レビュー
                  %option{value: 1} ★☆☆☆☆
                  %option{value: 2} ★★☆☆☆
                  %option{value: 3} ★★★☆☆
                  %option{value: 4} ★★★★☆
                  %option{value: 5, selected: "selected"} ★★★★★
                - else
                  %option{value: ""} レビュー
                  %option{value: 1} ★☆☆☆☆
                  %option{value: 2} ★★☆☆☆
                  %option{value: 3} ★★★☆☆
                  %option{value: 4} ★★★★☆
                  %option{value: 5} ★★★★★
              %li.item
                - unless @game.i_registed
                  %select.new_status{name: "status", size: "1"}
                    %option{value: ""} ステータス
                    %option{value: "1"} 気になる
                    %option{value: "2"} プレイ中
                    %option{value: "3"} クリア済
                - else
                  %select.my_status{name: "status", size: "1"}
                    - [{value: "", name: "ステータス"}, {value: "1", name: "気になる"}, {value: "2", name: "プレイ中"}, {value: "3", name: "クリア済"}].each do |obj|
                      - if obj[:value].to_i == @game.my_status_id.to_i
                        %option{value: obj[:value], selected: "selected"}
                          = obj[:name]
                      - else
                        %option{value: obj[:value]}
                          = obj[:name]
      %section.sortBox
        %h3.sortTtl このゲームに対するポスト
        %ul.sortList
          %li.item.current.follower_posts
            %a.follow{href: "/games/#{@game[:id]}#follower"} フォロー中のユーザー
          %li.item.all_posts
            %a.all{href: "/games/#{@game[:id]}#all"} すべてのユーザー
          %li.item.liker_posts
            %a.star{href: "/games/#{@game[:id]}#liker"} いいね順

  .game-timeline
    .post-list
    = image_tag "gif-load.gif", class: "loading-gif"



= render partial: "application/pc/footer"

= render partial: "application/underscore/pc/common/delete_confirm"
= render partial: "application/underscore/pc/game/post"

