%ul.gameBtnList
  - if game.i_registed
    %li.item
      %select.stars.my-rate{name: "stars", size: 1}
        - case game.my_rate.to_i
        - when 1
          %option{value: ""} ★で評価
          %option{value: 1, selected: "selected"} ★☆☆☆☆
          %option{value: 2} ★★☆☆☆
          %option{value: 3} ★★★☆☆
          %option{value: 4} ★★★★☆
          %option{value: 5} ★★★★★
        - when 2
          %option{value: ""} ★で評価
          %option{value: 1} ★☆☆☆☆
          %option{value: 2, selected: "selected"} ★★☆☆☆
          %option{value: 3} ★★★☆☆
          %option{value: 4} ★★★★☆
          %option{value: 5} ★★★★★
        - when 3
          %option{value: ""} ★で評価
          %option{value: 1} ★☆☆☆☆
          %option{value: 2} ★★☆☆☆
          %option{value: 3, selected: "selected"} ★★★☆☆
          %option{value: 4} ★★★★☆
          %option{value: 5} ★★★★★
        - when 4
          %option{value: ""} ★で評価
          %option{value: 1} ★☆☆☆☆
          %option{value: 2} ★★☆☆☆
          %option{value: 3} ★★★☆☆
          %option{value: 4, selected: "selected"} ★★★★☆
          %option{value: 5} ★★★★★
        - when 5
          %option{value: ""} ★で評価
          %option{value: 1} ★☆☆☆☆
          %option{value: 2} ★★☆☆☆
          %option{value: 3} ★★★☆☆
          %option{value: 4} ★★★★☆
          %option{value: 5, selected: "selected"} ★★★★★
        - else
          %option{value: ""} ★で評価
          %option{value: 1} ★☆☆☆☆
          %option{value: 2} ★★☆☆☆
          %option{value: 3} ★★★☆☆
          %option{value: 4} ★★★★☆
          %option{value: 5} ★★★★★
  %li.item
    - unless game.i_registed
      %select.new-status{name: "status", size: "1"}
        %option{value: ""} 登録する
        %option{value: "1"} 気になる
        %option{value: "2"} プレイ中
        %option{value: "3"} クリア済
    - else
      %select.my-status.registed{name: "status", size: "1"}
        - [{value: "", name: "登録する"}, {value: "1", name: "気になる"}, {value: "2", name: "プレイ中"}, {value: "3", name: "クリア済"}].each do |obj|
          - if obj[:value].to_i == game.my_status_id.to_i
            %option{value: obj[:value], selected: "selected"}
              = obj[:name]
          - else
            %option{value: obj[:value]}
              = obj[:name]