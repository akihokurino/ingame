= content_for :head do
  = stylesheet_link_tag    "pc/search_device"

= content_for :last do
  = javascript_include_tag "main/pc/search_device"

= render partial: "application/pc/default_header"

.mainContent.search-device-page
  / .searchTopBox
  /   .searchBox
  /     %form.searchWrap
  /       %input.search.game-title-input{type: "text", placeholder: "キーワードでゲームを探す"}
  /     %p.searchBtn.search-btn{href: ""} 検索
  /   %ul.sortList
  /     %li.item.current
  /       %a.sortListLink{href: "/search#game"} ゲーム検索
  /     %li.item
  /       = link_to "タグ検索", gametags_path, class: "sortListLink"
  /     %li.item
  /       = link_to "デバイス検索", devices_games_path, class: "sortListLink"
  /     %li.item
  /       %a.sortListLink{href: "/search#user"} ユーザー検索
  .mainContentInner
    .deviceColumn.device-column
      .deviceMenu
        %h1.deviceMenuTtl デバイス一覧
        %form.deviceSearchWrap
          %input.deviceSearch.search-device{placeholder: "デバイスを検索"}
        %ul.deviceMenuList.device-list
    .gameResultColumn
      .gameResultColumnList.gameListBox
        .result-area.resultArea
        %ul.gameListWrap.flexWidth.result-list
        = image_tag "gif-load-pc.gif", class: "loading-gif"

= render partial: "application/underscore/pc/common/device"
= render partial: "application/underscore/pc/common/game_result"
= render partial: "application/underscore/pc/search/result_text"