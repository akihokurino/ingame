%script{type: "text/template", id: "game-result-template"}
  %figure
    /%img.gameImg{src: "/game_photos/{{= photo_path}}", width: "32", height: "32", alt: ""}
    %a{href: "/games/{{= id }}#all"}
      %img.gameImg{src: "{{= photo_url }}", width: "100", alt: ""}
    %a{href: "/games/{{= id }}#all"}
      %figcaption {{= title }}
  %span.device {{= device }}
  %ul.starList
    {{ diff = 5 - avg_rate }}
    {{ for (var i = 0; i < avg_rate; i++) { }}
    %li.starOn ★
    {{ } }}
    {{ for (var i = 0; i < diff; i++) { }}
    %li.starOff ☆
    {{ } }}
  %span.mood
    %select{name: "status", size: "1", class: "status"}
      %option{value: ""} 登録する
      %option{value: 1} 気になる
      %option{value: 2} プレイ中
      %option{value: 3} クリア済