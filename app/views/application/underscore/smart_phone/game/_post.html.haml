%script{type: "text/template", id: "post-template"}
  .topBox
    %img.profImg{width: 58, height: 58, src: "/user_photos/{{= user.photo_path }}"}
    .postArea
      %a.account{href: "/users/{{= user.id }}"}
        {{= user.username }}
      %time.time ２時間前
      %h2.ttl
        %a{href: "/games/{{= game.id}}"}
          {{= game.title }}
      {{ if (status.id == 1) { }}
      .mood_ready 気になる
      {{ } else if (status.id == 2) { }}
      .mood_playing プレイ中
      {{ } else if (status.id == 3) { }}
      .mood_played クリア済
      {{ } }}
  %p.text
    {{= text }}
  .stateBox
    %a.commentBtn.comment-btn{href: "#"}
      コメント
    {{ if(!i_liked) { }}
    %span.like.favBtn
      {{= post_likes_count }}
    {{ } else { }}
    %span.unlike.favBtn.on
      {{= post_likes_count }}
    {{ } }}
    {{ if (current_user_id == user.id) { }}
    %li.deleteBtn.delete-btn
      削除
    {{ } }}