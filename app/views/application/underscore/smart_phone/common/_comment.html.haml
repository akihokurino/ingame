%script{type: "text/template", id: "comment-template"}
  .commentImgWrap
    %img{src: "/user_photos/{{= user.photo_path }}"}
  .commentText
    %a.userName{href: "/users/{{= user.id }}"}
      {{= user.username }}
    %p.commentTime {{= created_at }}
    {{ if (!i_liked) { }}
    %span.like-btn.favBtn
      いいね！
      {{= comment_likes_count }}
    {{ } else { }}
    %span.unlike-btn.favBtn.on
      いいね！を取り消す
      {{= comment_likes_count }}
    {{ } }}
    %p
      {{= text }}
