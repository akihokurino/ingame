%script{type: "text/template", id: "third-template"}
  %section.setting03
    %h2.setting03Ttl プロフィール写真を設定
    .uploadBox
      #thumbnail{width: 96, height: 96}
        = image_tag "/user_photos/default.png", width: "96", height: "96", alt: "", class: "profImg"
      .btnWrap
        %p.btnText 写真をアップロード
        %form
          %input.btn#upload-btn{type: "file", value: "写真をアップロード"}
    %form.entryBox
      %input.btn.next-page{type: "submit", value: "スキップ"}
    %ul.progress
      %li.progress--off
      %li.progress--off
      %li.progress--on

    .clipBox.clip-box
      %h2.clipTtl 画像の位置をドラッグで変更
      %figure.clipImgWrap
        .clipArea#clip-area
      %ul.clipBtnLis
        %li.cancel.cancel-clip キャンセル
        %li.done.done-clip 決定
