%script{type: "text/template", id: "game-search-template"}
  .tabs
    .to-game-search ゲーム
    = link_to "ユーザー", "#", class: "to-user-search change-target-link"
  %section.game-search.searchWrap
    %form.search-form.entryBox
      %span.icon-search
      %input.game-title-input.search{type: "search", name: "game_title", placeholder: "キーワードでゲームを検索"}

  .game-activity-list-wrap
    .boxTtl
      %h2 最近登録されたゲーム
    %ul.gameAvtivityList.game-activity-list
  .result-area
  %ul.result-list.gameList
  = image_tag "gif-load-pc.gif", class: "loading-gif"