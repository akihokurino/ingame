%script{type: "text/template", id: "signup-template"}
  %header.SignupHeader
    %h1.SignupHeaderTtl GAMR
  %section.Signup
    %h1.SignupTtl GAMRに登録する
    %form
      - value = @current_provider[:username] if @current_provider && @current_provider[:username]
      %input.SigninInput.username-input{type: "text", name: "username", placeholder: "ユーザー名（15文字以内）", value: value}
      %p.SigninError.error-log.username-error
      %input.SigninInput.password-input{type: "password", name: "password", placeholder: "パスワード（8文字以上）"}
      %p.SigninError.error-log.password-error
      %input.SigninInput.password-confirm-input{type: "password", name: "password_confirm", placeholder: "パスワード（確認用）"}
      %p.SigninError.error-log.password-confirm-error
      %label.SignupLabel
        %input.SignupCheckbox.rule-checkbox{type: "checkbox"}
        = link_to "利用規約", term_pages_path, target: "blank", class: "SignupLink"
        に同意する
      %p.SigninError.error-log.rule-error
    %p.SignupBtnWrap
      %a.SignupBtn.signup-btn{href: ""} 登録する