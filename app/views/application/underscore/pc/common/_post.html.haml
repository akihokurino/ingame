%script{type: "text/template", id: "post-template"}
  .contentBox
    .gameWrap
      {{ if (status.id == 1) { }}
      %p.statusReady
        {{= status.name }}
      {{ } else if (status.id == 2) { }}
      %p.statusPlaying
        {{= status.name }}
      {{ } else if (status.id == 3) { }}
      %p.statusPlayed
        {{= status.name }}
      {{ } else if (status.id == 4) { }}
      %p.statusStock
        {{= status.name }}
      {{ } }}
      %a{href: "/games/{{= game.id}}#all"}
        {{ if (game.photo_path) { }}
        %img.gamePhoto{src: "/game_photos/{{= game.photo_path }}", height: 70}
        {{ } else if (game.photo_url) { }}
        %img.gamePhoto{src: "{{= game.photo_url }}", height: 70}
        {{ } else { }}
        %img.gamePhoto{src: "/game_photos/default.png", height: 70}
        {{ } }}
    .left
      .postHeader
        %figure.profImgWrap
          %img.profImg{src: "/user_photos/{{= user.photo_path }}", width: "44", height: "44", alt: "ユーザー画像"}
        %a.account{href: "/users/{{= user.id }}#logs"}
          {{= user.username }}
        %p.time {{= created_at }}
      .textWrap
        %h2.gameTtl
          %a.gameTtlLink{href: "/games/{{= game.id }}#all"}
            {{= game.title }}
        .postText
          %a{href: "/posts/{{= id }}"}
            {{= text }}
        .thumbnail
          {{ for (var i = 0; i < post_photos.length; i++) { }}
          %img.thumbnailImg{src: "/post_photos/{{= post_photos[i].photo_path }}"}
          {{ } }}
        .urlThumbnailWrap
          {{ for (var i = 0; i < post_urls.length; i++) { }}
          %a.urlThumbnail{href: "{{= post_urls[i].url }}", target: "blank"}
            %img.thumbnailImg{src: "{{= post_urls[i].thumbnail }}"}
            .body
              %p.title {{= post_urls[i].title }}
              %p.description {{= post_urls[i].description }}
          {{ } }}
      %ul.actionList
        %li.cmtBtn
          コメント
          %span.cmtNum
            {{= post_comments_count }}
        {{ if (!i_liked) { }}
        %li.like-btn.fvrBtn
          いいね！
          %span.likeNum
            {{= post_likes_count }}
        {{ } else { }}
        %li.unlike-btn.fvrBtn.on
          いいね！
          %span.likeNum
            {{= post_likes_count }}
        {{ } }}
        {{ if (current_user_id == user.id) { }}
        %li.deleteBtn.delete-btn
          削除
        {{ } }}
  .commentBox
    %ul.commentList
      {{ for (var i = 0; i < post_comments.length; i++) { }}
      %li.item
        %figure.profImgWrap
          %img.profImg{src: "/user_photos/{{= post_comments[i].user.photo_path }}", width: "30", height: "30", alt: ""}
        .commentInfo
          %a.account{href: ""}
            {{= post_comments[i].user.username }}
          %p.commentTime {{= post_comments[i].created_at }}
          {{ if (!post_comments[i].i_liked) { }}
          %p.comment-like.fvrBtn{"data-commentindex" => "{{= i }}"}
            いいね！
            %span.likeNum
              {{= post_comments[i].comment_likes_count }}
          {{ } else { }}
          %p.comment-unlike.fvrBtn.on{"data-commentindex" => "{{= i }}"}
            いいね！を取り消す
            %span.likeNum
              {{= post_comments[i].comment_likes_count }}
          {{ } }}
          %p.userComment
            {{= post_comments[i].text }}
      {{ } }}
    .myCommentBox
      %figure.profImgWrap
        %img.profImg{src: "/user_photos/#{@current_user[:photo_path]}", width: "30", height: "30", alt: ""}
      %form.commentWrap
        %textarea.comment.comment-input{placeholder: "コメントする"}