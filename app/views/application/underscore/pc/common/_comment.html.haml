%script{type: "text/template", id: "comment-template"}
  %figure.profImgWrap
    %img.profImg{src: "/user_photos/default.png", width: "30", height: "30", alt: ""}
  .commentInfo
    %a.account {{= user.username }}
    %p.commentTime.icon-time {{= created_at }}
    {{ if (i_liked) { }}
    %p.unlike-btn.icon-like.on
      %span.likeNum.comment-like-count
        {{= comment_likes_count }}
    {{ } else { }}
    %p.like-btn.icon-like
      %span.likeNum.comment-like-count
        {{= comment_likes_count }}
    {{ } }}
    %p.userComment {{= text }}