%script{type: "text/template", id: "game-result-template"}
  %article.Gamelist__item
    %a.Gamelist__link.to-game-page{href: "#"}
      %figure.Gamelist__imgWrap
        {{ if (photo_path) { }}
        %img.Gamelist__img{src: "/game_photos/{{= photo_path }}", width: "166", alt: ""}
        {{ } else if (photo_url) { }}
        %img.Gamelist__img{src: "{{= photo_url }}", width: "166", alt: ""}
        {{ } else { }}
        %img.Gamelist__img{src: "/game_photos/default.png", width: "166", alt: ""}
        {{ } }}
      %h1.Gamelist__title
        {{= title }}
      %span.Gamelist__device {{= device }}
      %ul.Gamelist__starList
        {{ diff = 5 - avg_rate }}
        {{ for (var i = 0; i < avg_rate; i++) { }}
        %li.Gamelist__star--on ★
        {{ } }}
        {{ for (var i = 0; i < diff; i++) { }}
        %li.Gamelist__star--off ☆
        {{ } }}
    .Gamelist__statusWrap
      %select.Gamelist__status.my-status{name: "status", size: 1}
        %option{value: ""} 登録する
        %option{value: 1} 気になる
        %option{value: 2} プレイ中
        %option{value: 3} クリア済