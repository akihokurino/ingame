%script{type: "text/template", id: "game-result-template"}
  {{ if (current_url) { }}
  %article.gameList
    %a.gameListLink{href: "{{= current_url }}"}
      %figure.gameImgWrap
        / %img.gameImg{src: "/game_photos/{{= photo_path }}", width: "166", alt: ""}
        {{ if (photo_url) { }}
        %img.gameImg{src: "{{= photo_url }}", width: "166", alt: ""}
        {{ } else { }}
        %img.gameImg{src: "/game_photos/default.png", width: "166", alt: ""}
        {{ } }}
      %h1.ttl
        {{= title }}
      %span.device {{= device }}
      %ul.starList
        {{ diff = 5 - avg_rate }}
        {{ for (var i = 0; i < avg_rate; i++) { }}
        %li.starOn ★
        {{ } }}
        {{ for (var i = 0; i < diff; i++) { }}
        %li.starOff ☆
        {{ } }}
    .statusWrap
      %select.status.my-status{name: "status", size: 1}
        %option{value: ""} 登録する
        %option{value: 1} 気になる
        %option{value: 2} プレイ中
        %option{value: 3} クリア済
  {{ } else { }}
  %article.gameList
    %span
      %figure.gameImgWrap
        / %img.gameImg{src: "/game_photos/{{= photo_path }}", width: "166", alt: ""}
        {{ if (photo_url) { }}
        %img.gameImg{src: "{{= photo_url }}", width: "166", alt: ""}
        {{ } else { }}
        %img.gameImg{src: "/game_photos/default.png", width: "166", alt: ""}
        {{ } }}
      %h1.ttl
        {{= title }}
      %span.device {{= device }}
      %ul.starList
        {{ diff = 5 - avg_rate }}
        {{ for (var i = 0; i < avg_rate; i++) { }}
        %li.starOn ★
        {{ } }}
        {{ for (var i = 0; i < diff; i++) { }}
        %li.starOff ☆
        {{ } }}
    .statusWrap
      %select.status.my-status{name: "status", size: 1}
        %option{value: ""} 登録する
        %option{value: 1} 気になる
        %option{value: 2} プレイ中
        %option{value: 3} クリア済
  {{ } }}