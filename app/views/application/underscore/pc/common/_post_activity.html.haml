%script{type: "text/template", id: "post-activity-template"}
  .activityPost
    %a{href: "/games/{{= game.id}}#all"}
      {{ if (game.photo_path) { }}
      %img.gamePhoto{src: "/game_photos/{{= game.photo_path }}", height: 50, width: 50}
      {{ } else if (game.photo_url) { }}
      %img.gamePhoto{src: "{{= game.photo_url }}", height: 50, width: 50}
      {{ } else { }}
      %img.gamePhoto{src: "/game_photos/default.png", height: 50, width: 50}
      {{ } }}
    %a{href: "/users/{{= user.id }}#logs"}
      %img.profileImage{width: 30, src: "/user_photos/{{= user.photo_path }}"}
    %span.postText {{= user.username }} „ÅØ {{= text }}
    %span.time.icon-time {{= created_at }}