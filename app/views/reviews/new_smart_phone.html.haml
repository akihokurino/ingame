= content_for :head do
  = stylesheet_link_tag    "smart_phone/create_review"

= content_for :last do
  = javascript_include_tag "main/smart_phone/create_review"

= render partial: "application/smart_phone/default_header"

.review-new-page.mainCnt{"data-gameid" => @game[:id]}
  .gameInfo
    %h3
      = @game[:title]
  %form.reviewForm
    .formGroup
      .label 評価
      %select.reviewBtn.stars.my-rate{name: "stars", size: 1, value: @game.avg_rate.to_i}
        - case @game.avg_rate.to_i
        - when 1
          %option{value: ""} ★で評価
          %option{value: 1, selected: true} ★☆☆☆☆
          %option{value: 2} ★★☆☆☆
          %option{value: 3} ★★★☆☆
          %option{value: 4} ★★★★☆
          %option{value: 5} ★★★★★
        - when 2
          %option{value: ""} ★で評価
          %option{value: 1} ★☆☆☆☆
          %option{value: 2, selected: true} ★★☆☆☆
          %option{value: 3} ★★★☆☆
          %option{value: 4} ★★★★☆
          %option{value: 5} ★★★★★
        - when 3
          %option{value: ""} ★で評価
          %option{value: 1} ★☆☆☆☆
          %option{value: 2} ★★☆☆☆
          %option{value: 3, selected: true} ★★★☆☆
          %option{value: 4} ★★★★☆
          %option{value: 5} ★★★★★
        - when 4
          %option{value: ""} ★で評価
          %option{value: 1} ★☆☆☆☆
          %option{value: 2} ★★☆☆☆
          %option{value: 3} ★★★☆☆
          %option{value: 4, selected: true} ★★★★☆
          %option{value: 5} ★★★★★
        - when 5
          %option{value: ""} ★で評価
          %option{value: 1} ★☆☆☆☆
          %option{value: 2} ★★☆☆☆
          %option{value: 3} ★★★☆☆
          %option{value: 4} ★★★★☆
          %option{value: 5, selected: true} ★★★★★
        - else
          %option{value: ""} ★で評価
          %option{value: 1, selected: true} ★☆☆☆☆
          %option{value: 2} ★★☆☆☆
          %option{value: 3} ★★★☆☆
          %option{value: 4} ★★★★☆
          %option{value: 5} ★★★★★
      %p.error-log.review-error.errorMassage

    .formGroup
      .label レビュータイトル (20文字以内)
      = text_field_tag "review[title]", "", class: "reviewTitleInput title-input"
      %p.error-log.title-error.errorMassage

    .formGroup
      .label レビュー本文 (2000文字以内)
      = text_area_tag "review[text]", "", class: "reviewTextInput text-input"
      %p.error-log.text-error.errorMassage

    .formGroup
      %ul.btnList
        %li.item.cancelBtn
          %a{href: "/games/#{@game[:id]}#review"} キャンセル
        %li.item.createBtn
          %a.create-btn{href: "#"} 投稿
