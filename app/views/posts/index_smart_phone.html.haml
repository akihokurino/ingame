= content_for :head do
  = javascript_include_tag "timeline.js"

= #link_to "ログアウト", logout_users_path
= #link_to "ユーザー情報", user_path(@current_user)
= #link_to "投稿", "/posts/new#select"

%header
  %h1.ttlWrap
    = link_to "Playdy", posts_path, class: "ttl"
  %span.menu{href: ""}
  %span.serch{href: ""}
  %span.profile{href: ""}
  %ul.openMenu
    %li.item
      %a.menuItem{href: ""} 登録しているゲーム
    %li.item
      %a.menuItem{href: ""} 通知
    %li.item
      %a.menuItem{href: ""} アカウント設定
    %li.item
      %a.menuItem{href: ""} Playdyとは
    %li.item
      %a.menuItem{href: ""} ログアウト

.mainCnt.timeline-page
  .commentWrap
    = link_to "ゲームをシェア", "/posts/new#select", class: "comment"
  / ここにPostの一覧を表示
  .post-list

%script{type: "text/template", id: "post-template"}
  <div class="topBox">
  <img class="profImg" width="58" height="58" src="/user_photos/<%- user.photo_path %>" />
  <div class="postArea">
  <a class="account" href=""><%- user.username %></a>
  <time class="time">２時間前</time>
  <h2 class="ttl"><%- game.title %></h2>
  <div class="mood_playing">プレイ中</div>
  </div>
  </div>
  <p class="text"><%- text %></p>
  <div class="stateBox">
  <a class="commentBtn" href="">コメントする</a>
  <% if(!i_liked){ %>
  <span class="like favBtn"><%- post_likes_count %></span>
  <% } else { %>
  <span class="unlike favBtn"><%- post_likes_count %></span>
  <% } %>
  </div>

%script{type: "text/template", id: "game-template"}
  <%- title %>

%script{type: "text-template", id: "user-template"}
  <a href="/users/<%= id %>" style="display: block;"><%- username %></a>
