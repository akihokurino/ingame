= content_for :head do
  = stylesheet_link_tag    "pc/profile"

= content_for :last do
  = javascript_include_tag "main/pc/profile"


= render partial: "application/pc/default_header"

%section.mainContent.profile-page{"data-userid" => @user[:id]}
  .profileBox
    .profileBoxInner
      %figure.profImgWrap
        = image_tag "/user_photos/#{@user[:photo_path]}", class: "profImg", width: 135, hieght: 135, alt: "ユーザー画像"
      %h1.userName
        = @user.username
      %p.userPlace
        = @user.place
      %p.userInfo
        = @user.introduction
    .countListWrap
      %ul.countList.count-box
        %li.gameNum.logs-li.current
          %a{href: "/users/#{@user[:id]}#logs"}
            ライブラリ
            %span.count
              = @user.logs.count
        %li.postNum.posts-li
          %a{href: "/users/#{@user[:id]}#posts"}
            ポスト
            %span.count
              = @user.posts.count
        %li.followNum.follows-li
          %a{href: "/users/#{@user[:id]}#follows"}
            フォロー
            %span.count
              = @user.follow_num
        %li.followerNum.followers-li
          %a{href: "/users/#{@user[:id]}#followers"}
            フォロワー
            %span.count
              = @user.follower_num
      %form.libSearchWrap
        %input.libSearch{placeholder: "ライブラリ内をキーワードで検索"}
      - unless current_user?(@user)
        %span.follow-wrap
          - if @user.i_followed
            %span.followBtn.unfollow-btn フォローを外す
          - else
            %span.followBtn.follow-btn フォロー

  .profile-timeline

= render partial: "application/pc/footer"


= render partial: "application/underscore/pc/profile/follow_btn"
= render partial: "application/underscore/pc/profile/unfollow_btn"

= render partial: "application/underscore/pc/profile/log_list"
= render partial: "application/underscore/pc/profile/log"

= render partial: "application/underscore/pc/profile/post_list"
= render partial: "application/underscore/pc/profile/post"

= render partial: "application/underscore/pc/profile/follows_list"
= render partial: "application/underscore/pc/profile/followers_list"
= render partial: "application/underscore/pc/profile/user"

