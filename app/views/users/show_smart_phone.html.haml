= content_for :head do
  = javascript_include_tag "profile.js"

%header
  %h1.ttlWrap
    = link_to "Playdy", posts_path, class: "ttl"
  %span.menu{href: ""}
  %span.serch{href: ""}
  = link_to "", user_path(@current_user), class: "profile"
  %ul.openMenu
    %li.item
      %a.menuItem{href: ""} 登録しているゲーム
    %li.item
      %a.menuItem{href: ""} 通知
    %li.item
      = link_to "アカウント設定", user_path(@current_user), class: "menuItem"
    %li.item
      %a.menuItem{href: ""} Playdyとは
    %li.item
      = link_to "ログアウト", logout_users_path, class: "menuItem"

.profile-page.mainCnt{"data-userid" => @user[:id]}
  .personalBoxWrap
    %figure.profImgWrap
      = image_tag "/user_photos/#{@user[:photo_path]}", height: 83, class: "profImg"
    %section.personalBox
      %h1.name
        = @user.username
      - if @user.place
        %p.place
          %span.town
            = @user.place
      %p.text
        = @user.introduction
      - unless current_user?(@user)
        %span.follow-wrap
          - if @user.i_followed
            %span.followBtn.unfollow フォローを外す
          - else
            %span.followBtn.follow フォロー
      - else
        = link_to "編集", edit_user_path(@user), class: "edit-btn personalEdit"
        = link_to "ログ編集", logs_path, class: "edit-btn"
      %ul.countBox
        %li.item
          %a.follow{href: ""}
            %span.count
              = @user.follow_num
            フォロー
        %li.item
          %a.follower{href: ""}
            %span.count
              = @user.follower_num
            フォロワー
        %li.item
          %a.gameNum{href: ""}
            %span.count
              = @user.logs.count
            ゲーム数
        %li.item
          %a.postNum{href: ""}
            %span.count
              = @user.posts.count
            ポスト数

  .gameBox
    %ul.sortBox
      %li.item.current.playing-li
        %span.playing プレイ中
      %li.item.ready-li
        %span.ready 気になる
      %li.item.played-li
        %span.played アーカイブ
    %form.searchBox
      %input{input: "text", placeholder: "search", role: "textarea"}
    %ul.gameList.log-list

= render partial: "application/underscore/profile/log"
= render partial: "application/underscore/profile/follow"
= render partial: "application/underscore/profile/unfollow"




