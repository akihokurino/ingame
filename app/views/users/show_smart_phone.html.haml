= content_for :head do
  = stylesheet_link_tag    "smart_phone/profile"

= content_for :last do
  = javascript_include_tag "main/smart_phone/profile"

= render partial: "application/smart_phone/default_header"

.profile-page.mainCnt{"data-userid" => @user[:id]}
  .personalBoxWrap
    .bgOverlayer
      %figure.profImgWrap
        = image_tag "/user_photos/#{@user[:photo_path]}", class: "profImg"
      %section.personalBox
        %h1.name
          = @user.username
        - if @user.place
          %p.place
            %span.town
              = @user.place
        %p.text
          = @user.introduction
        - unless current_user?(@user)
          %span.follow-wrap
            - if @user.i_followed
              %span.followBtn.unfollow-btn フォローを外す
            - else
              %span.followBtn.follow-btn フォロー
        - else
          = link_to "編集", edit_user_path(@user), class: "edit-btn personalEdit"
        %ul.countBox.count-box
          %li.item.logs-li.current
            %a.gameNum{href: "/users/#{@user[:id]}#logs"}
              %span.count
                = @user.logs.count
              ライブラリ
          %li.item.posts-li
            %a.postNum{href: "/users/#{@user[:id]}#posts"}
              %span.count
                = @user.posts.count
              チェックイン
          %li.item.follows-li
            %a.followNum{href: "/users/#{@user[:id]}#follows"}
              %span.count
                = @user.follow_num
              フォロー
          %li.item.followers-li
            %a.followerNum{href: "/users/#{@user[:id]}#followers"}
              %span.count
                = @user.follower_num
              フォロワー
  .profile-timeline


= render partial: "application/underscore/smart_phone/profile/follow_btn"
= render partial: "application/underscore/smart_phone/profile/unfollow_btn"

